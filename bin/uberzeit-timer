#!/bin/sh

echo $(date) >> /tmp/lala
echo $1 >> /tmp/lala

case $1 in
  start)
    curl -s -X POST -H "X-Auth-Token: ${TOKEN}" -d 'time_type_id=1' https://uberzeit.nine.ch/api/timer >> /tmp/lala
    ;;
  stop)
    curl -s -X PUT -H "X-Auth-Token: ${TOKEN}" -d 'end=true' https://uberzeit.nine.ch/api/timer >> /tmp/lala
    ;;
esac
echo '' >> /tmp/lala
