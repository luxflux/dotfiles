#!/bin/bash

set -e

APP=$1
VERSION=$2

if [ -z "$1" -o -z "$2" ]; then
  echo "Usage: $0 <app> <version>"
  exit 1
fi

eval $(docker-machine env default)
docker build -t ${APP} .
docker tag ${APP} eu.gcr.io/nodal-algebra-161404/${APP}:${VERSION}
gcloud docker -- push eu.gcr.io/nodal-algebra-161404/${APP}:${VERSION}
