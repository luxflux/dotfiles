# vim: ft=rc:

[general]
ui = ttyui
accounts = yux,welltravel
pythonfile=~/.mutt/offlineimap.py
fsync = False

[Account yux]
localrepository = yux-Local
remoterepository = yux-Remote
status_backend = sqlite
presynchook = logger -t offlineimap -p mail.info "Starting sync of mail account yux"
postsynchook = ~/.mutt/offlineimap-postsynchook yux.ch
autorefresh = 5

[Repository yux-Local]
type = Maildir
localfolders = ~/.mail/yux.ch

[Repository yux-Remote]
maxconnections = 5
type = IMAP
remotehost = imap.kolabnow.com
remoteuser = raffael@yux.ch
remotepasseval = get_keychain_pass(account="raffael@yux.ch", server="imap.kolabnow.com")
realdelete = no
sslcacertfile = /usr/local/etc/openssl/cert.pem
folderfilter = lambda folder: not re.search('^(Configuration|Files|Freebusy|Journal|Other Users|Raffaels K)', folder)
idlefolders = ['INBOX']
holdconnectionopen = yes

[Account welltravel]
localrepository = welltravel-Local
remoterepository = welltravel-Remote
status_backend = sqlite
presynchook = logger -t offlineimap -p mail.info "Starting sync of mail account welltravel"
postsynchook = ~/.mutt/offlineimap-postsynchook welltravel.com
autorefresh = 5

[Repository welltravel-Local]
type = Maildir
localfolders = ~/.mail/welltravel.com

[Repository welltravel-Remote]
maxconnections = 5
type = IMAP
remotehost = imap.nine.ch
remoteuser = raffael.schmid@welltravel.com
remotepasseval = get_keychain_pass(account="raffael.schmid@welltravel.com", server="imap.nine.ch")
realdelete = no
sslcacertfile = /usr/local/etc/openssl/cert.pem
idlefolders = ['INBOX']
holdconnectionopen = yes
